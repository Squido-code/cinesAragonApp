<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fichaDescriptivaBottomNavigation.fragments.Fragment2">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#57FFEB3B"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloFichaTecnica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="@string/mas_informaci_n"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/datosTecnicos"
            android:layout_width="match_parent"
            android:layout_height="81dp"

            android:layout_marginEnd="5dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/trilerTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trailer"
            android:textAlignment="center"
            android:textSize="25sp" />

        <FrameLayout
            android:id="@+id/youTubeview"
            android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
            android:layout_width="329dp"
            android:layout_height="326dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop" />


    </LinearLayout>


</FrameLayout>